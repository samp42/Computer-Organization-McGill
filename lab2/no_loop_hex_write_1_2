@ writes hexadecimal digit received as argument in HEX display at given index
@ R0: index of HEX display
@ R1: value to display
HEX_write_ASM:
	PUSH {R4-R6}
	LDR R4, =HEX0_MEMORY
	
	@ number to store in HEX memory
	LDR R5, =HEX_VALUE
	MOV R6, #4
	MLA R5, R6, R1, R5
	LDR R5, [R5]
	MOV R6, #8
	MUL R0, R6
	LSL R5, R0
	
	STR R5, [R4]
	
	POP {R4-R6}
	
	BX LR